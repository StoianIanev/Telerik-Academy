@model Twitter.Model.Tweet

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Content</h2>
<div>
    @using (Html.BeginForm("SaveData", "Twitter", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "control-label" })
            @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
        </div>
        <br />
        <br />
        <div>
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    }
</div>
<br />
<br />
<p>
    <a class="btn btn-default" href="http://localhost:53195/Admin/Twitter">Cancel</a>
</p>

